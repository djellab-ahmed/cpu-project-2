set(GPTOSS_VERSION      @GPTOSS_INSTALL_VERSION@)
set(GPTOSS_BUILD_COMMIT @GPTOSS_BUILD_COMMIT@)
set(GPTOSS_BUILD_NUMBER @GPTOSS_BUILD_NUMBER@)
set(GPTOSS_SHARED_LIB   @BUILD_SHARED_LIBS@)

@PACKAGE_INIT@

set_and_check(GPTOSS_INCLUDE_DIR "@PACKAGE_GPTOSS_INCLUDE_INSTALL_DIR@")
set_and_check(GPTOSS_LIB_DIR     "@PACKAGE_GPTOSS_LIB_INSTALL_DIR@")
set_and_check(GPTOSS_BIN_DIR     "@PACKAGE_GPTOSS_BIN_INSTALL_DIR@")

find_package(ggml REQUIRED HINTS ${GPTOSS_LIB_DIR}/cmake)

find_library(gptoss_LIBRARY gptoss
    REQUIRED
    HINTS ${GPTOSS_LIB_DIR}
    NO_CMAKE_FIND_ROOT_PATH
)

add_library(gptoss UNKNOWN IMPORTED)
set_target_properties(gptoss
    PROPERTIES
        INTERFACE_INCLUDE_DIRECTORIES "${GPTOSS_INCLUDE_DIR}"
        INTERFACE_LINK_LIBRARIES "ggml::ggml;ggml::ggml-base;"
        IMPORTED_LINK_INTERFACE_LANGUAGES "CXX"
        IMPORTED_LOCATION "${gptoss_LIBRARY}"
        INTERFACE_COMPILE_FEATURES c_std_90
        POSITION_INDEPENDENT_CODE ON)

check_required_components(Gptoss)
